<%- include ("../layouts/header") %>

<h1>Utilisateur</h1>

<div class="content">
    <form action="/users/update/<%= usr.id %>" method="post" class="ui form">
        <div class="field">
    		<span><strong>id</strong> : <%= usr.id %></span>
            <input type="hidden" name="id" id="id" value="<%= usr.id %>">
    	</div>

        <div class="field">
    		<label for="name">Nom</label>
    		<input type="text" name="name" id="name" value="<%= usr.name %>" max-maxlength="55" required>
    	</div>

        <div class="field">
    		<label for="email">Email</label>
    		<input type="text" name="email" id="email" value="<%= usr.email %>" max-maxlength="75" required>
    	</div>

        <div class="field">
    		<label for="password">Mot de passe</label>
    		<input type="password" name="password" id="password" placeholder="Changer le mot de passe" minlength="6" max-maxlength="30">
    	</div>

        <div class="field">
    		<label for="status">Statut</label>
            <select name="status" id="status" required>
                <option value="administrateur" <% if (usr.isAdmin) { %>selected<% } %>>Administrateur</option>
                <option value="utilisateur" <% if (!usr.isAdmin) { %>selected<% } %>>Utilisateur</option>
            </select>
    	</div>

        <button type="submit" class="ui blue labeled submit icon button">
    		<i class="icon edit"></i> Modifier
    	</button>
    </form>
</div>

<%- include ("../layouts/footer") %>
