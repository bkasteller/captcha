<%- include ("../layouts/header") %>

<h1>Inscription</h1>

<form action="/register" method="post" class="ui form">
    <div class="field">
		<label for="name">Nom*</label>
		<input type="text" name="name" id="name" placeholder="Ex: Dupont" max-maxlength="55" required>
	</div>

    <div class="field">
		<label for="email">Email*</label>
		<input type="email" name="email" id="email" placeholder="Ex: dupont.marc@mail.fr" max-maxlength="75" required>
	</div>

    <div class="field">
		<label for="password">Mot de passe*</label>
		<input type="password" name="password" id="password" minlength="6" max-maxlength="30" required>
	</div>

    <button type="submit" class="ui blue labeled submit icon button">
		<i class="icon edit"></i> S'inscrire
	</button>
</form>

<%- include ("../layouts/footer") %>
